@model Product

<form method="post" class="form-control" asp-controller="Product" asp-action="UpdateProduct">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Create Category</h2>
			<hr />
		</div>
		<input asp-for="Id" type="hidden" />
		<div class="mb-3">

			<label asp-for="Title"></label>
			<input asp-for="Title" />
			<span asp-validation-for="Title" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="ISBN"></label>
			<input asp-for="ISBN" readonly />
			<span asp-validation-for="ISBN" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Author"></label>
			<input asp-for="Author" />
			<span asp-validation-for="Author" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="ListPrice"></label>
			<input asp-for="ListPrice" />
			<span asp-validation-for="ListPrice" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Price"></label>
			<input asp-for="Price" />
			<span asp-validation-for="Price" class="text-danger"></span>
		</div>
				<div class="mb-3">
			<label asp-for="Price50"></label>
			<input asp-for="Price50" />
			<span asp-validation-for="Price50" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Price100"></label>
			<input asp-for="Price100" />
			<span asp-validation-for="Price100" class="text-danger"></span>
		</div>

		<button type="submit" class="btn btn-primary" >Update</button>
		<a asp-controller="Product" asp-action="Index" class="btn btn-secondary">Back To List</a>
	</div>
</form>