@model List<Product>

<div class="container">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Product List</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Product" asp-action="AddProduct" class="btn btn-primary">Add Product</a>
		</div>
	</div>

	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>Product Name</th>
				<th>ISBN</th>
				<th>Author</th>
				<th>Price</th>
				<th>Price List</th>
				<th>Price(1-50)</th>
				<th>Price(50+)</th>
				<th>Price(100+)</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var mod in Model)
			{
				<tr>
					<td>@mod.Title</td>
					<td>@mod.ISBN</td>
					<td>@mod.Author</td>
					<td>@mod.ListPrice</td>
					<td>@mod.Price</td>
					<td>@mod.Price50</td>
					<td>@mod.Price100</td>
					<td>
						<div class="w-75 btn-group" role="group">
							<a asp-controller="Product" asp-action="UpdateProduct" asp-route-id="@mod.Id" class="btn btn-primary mx-2">Edit</a>
							<a asp-controller="Product" asp-action="DeleteProduct" asp-route-id="@mod.Id" class="btn btn-danger mx-2">Delete</a>
						</div>
					</td>
				</tr>

			}
		</tbody>
	</table>
</div>