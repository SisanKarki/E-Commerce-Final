@model Category

<form method="post" class="form-control" asp-controller="Category" asp-action="DeleteCategory">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Delete Category</h2>
			<hr />
		</div>
		
		<div class="mb-3">

			<label asp-for="Name"></label>
			<input asp-for="Name" disabled />
			
		</div>
		<div class="mb-3">
			<label asp-for="DisplayOrder"></label>
			<input asp-for="DisplayOrder" disabled />
			
		</div>
		<button type="submit" class="btn btn-danger" />Delete</button>
		<a asp-controller="Category" asp-action="Index" class="btn btn-secondary">Back To List</a>
	</div>
</form>