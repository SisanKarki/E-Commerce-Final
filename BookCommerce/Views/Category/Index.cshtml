@model List<Category>

<div class="container">
<div class="row pt-4">
	<div class="col-6">
		<h2 class="text-primary">Category List</h2>
	</div>
	<div class="col-6 text-end">
		<a asp-controller="Category" asp-action="AddCategory" class="btn btn-primary">Add Category</a>
	</div>
</div>

<table class="table table-bordered table-striped">
	<thead>
	<tr>
		<th>Category Name</th>
		<th>Display Order</th>
	</tr>
		</thead>
		<tbody>
	@foreach(var mod in Model.OrderBy(u=>u.DisplayOrder))
	{
		<tr>
			<td>@mod.Name</td>
			<td>@mod.DisplayOrder</td>
			<td> 
				<div class="w-75 btn-group" role="group">
				<a asp-controller="Category" asp-action="UpdateCategory" asp-route-id="@mod.Id" class="btn btn-primary mx-2">Edit</a>
							<a asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@mod.Id" class="btn btn-danger mx-2">Delete</a>
					</div>
			</td>
		</tr>

	}
		</tbody>
</table>
</div>