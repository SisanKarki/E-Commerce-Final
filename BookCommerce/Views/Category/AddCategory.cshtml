@model Category

<form method="post" class="form-control" asp-controller="Category" asp-action="AddCategory">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Create Category</h2>
			<hr />
		</div>
		<input asp-for="Id" type="hidden" />
		<div class="mb-3">
	
	<label asp-for="Name"></label>
	<input asp-for="Name" />
	<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="mb-3">
	<label asp-for="DisplayOrder"></label>
	<input asp-for="DisplayOrder" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
	<button type="submit" class="btn btn-primary"/>Create</button>
	<a asp-controller="Category" asp-action="Index" class="btn btn-secondary">Back To List</a>
	</div>
</form>